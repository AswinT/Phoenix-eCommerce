<header class="header">
    <div class="header-container">
        <!-- Logo and Brand Name -->
        <a href="/" class="logo-container">
            <img src="/images/phoenix-logo.png" alt="Phoenix Headphones" class="logo">
            <div class="brand-name">
                <span class="phoenix">Phoenix</span>
            </div>
        </a>
        
        <!-- Navigation -->
        <nav class="main-nav">
            <ul class="nav-list">
                <li class="nav-item"><a href="/" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'home' ? 'active' : '' %>">Home</a></li>
                <li class="nav-item"><a href="/products" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'products' ? 'active' : '' %>">Shop</a></li>
                <li class="nav-item"><a href="/about" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'about' ? 'active' : '' %>">About</a></li>
                <li class="nav-item"><a href="/contact" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'contact' ? 'active' : '' %>">Contact</a></li>
            </ul>
        </nav>
        
        <!-- Search and User Actions -->
        <div class="header-right">
            <div class="search-bar">
                <form action="/products" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Search products..." class="search-input" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                </form>
            </div>
            
            <div class="user-actions">
                <% if (locals && locals.user) { %>
                    <div class="dropdown">
                        <button class="dropdown-toggle">
                            <span class="material-icons">account_circle</span>
                            <span class="user-name">
                                <% if (locals.username) { %>
                                    <%= locals.username.split(' ')[0] %>
                                <% } else if (locals.user && locals.user.fullname) { %>
                                    <%= locals.user.fullname.split(' ')[0] %>
                                <% } else { %>
                                    User
                                <% } %>
                            </span>
                        </button>
                        <div class="dropdown-menu">
                            <a href="/profile" class="dropdown-item">
                                <span class="material-icons">person</span>
                                Profile
                            </a>
                            <a href="/orders" class="dropdown-item">
                                <span class="material-icons">shopping_bag</span>
                                Orders
                            </a>
                            <form action="/logout" method="POST" class="dropdown-item-form">
                                <button type="submit" class="dropdown-item logout-btn">
                                    <span class="material-icons">logout</span>
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/login" class="auth-btn">
                        <span class="material-icons">login</span>
                        <span>Login</span>
                    </a>
                    <a href="/signup" class="auth-btn signup">
                        <span class="material-icons">person_add</span>
                        <span>Sign Up</span>
                    </a>
                <% } %>
            </div>
        </div>
        
        <!-- Mobile Menu Toggle -->
        <button class="menu-toggle">
            <span class="material-icons">menu</span>
        </button>
    </div>
</header>

<!-- Mobile Navigation -->
<div class="mobile-nav">
    <div class="mobile-nav-header">
        <div class="logo-container">
            <img src="/images/phoenix-logo.png" alt="Phoenix Headphones" class="logo">
        </div>
        <button class="mobile-nav-close">
            <span class="material-icons">close</span>
        </button>
    </div>
    
    <nav class="mobile-main-nav">
        <ul class="mobile-nav-list">
            <li class="mobile-nav-item"><a href="/" class="mobile-nav-link">Home</a></li>
            <li class="mobile-nav-item"><a href="/products" class="mobile-nav-link">Shop</a></li>
            <li class="mobile-nav-item"><a href="/about" class="mobile-nav-link">About</a></li>
            <li class="mobile-nav-item"><a href="/contact" class="mobile-nav-link">Contact</a></li>
        </ul>
    </nav>
    
    <div class="mobile-user-actions">
        <% if (locals && locals.user) { %>
            <a href="/profile" class="mobile-user-link">
                <span class="material-icons">person</span>
                Profile
            </a>
            <a href="/orders" class="mobile-user-link">
                <span class="material-icons">shopping_bag</span>
                Orders
            </a>
            <form action="/logout" method="POST" class="mobile-logout-form">
                <button type="submit" class="mobile-user-link">
                    <span class="material-icons">logout</span>
                    Logout
                </button>
            </form>
        <% } else { %>
            <a href="/login" class="mobile-auth-btn">
                <span class="material-icons">login</span>
                Login
            </a>
            <a href="/signup" class="mobile-auth-btn">
                <span class="material-icons">person_add</span>
                Sign Up
            </a>
        <% } %>
    </div>
</div> 